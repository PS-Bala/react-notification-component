{
  "name": "bk-react-notification",
  "version": "1.3.1",
  "description": "The React Notification component is used to show notification details, Also user can mark a notification as read or remove.",
  "author": "PS-Bala",
  "license": "MIT",
  "repository": "PS-Bala/bk-react-notification",
  "keywords": [
    "notification",
    "notifications",
    "react-notifications",
    "react-notification"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "peerDependencies": {
    "react": ">=16"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "module": "dist/react-notification-lib.esm.js",
  "size-limit": [
    {
      "path": "dist/react-notification-lib.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/react-notification-lib.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^5.0.3",
    "@types/react": "^17.0.20",
    "@types/react-dom": "^17.0.9",
    "husky": "^7.0.2",
    "node-sass": "^6.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rollup-plugin-postcss": "^4.0.1",
    "size-limit": "^5.0.3",
    "tsdx": "^0.14.1",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3"
  }
}
